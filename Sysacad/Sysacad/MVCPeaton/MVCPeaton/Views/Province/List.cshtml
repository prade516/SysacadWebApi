@model IEnumerable<MVCPeaton.Models.ViewModels.ProvinceVM>

@using (Html.BeginForm("Index", "Province", FormMethod.Post, new { id = "frmfilter", name = "frmfilter" }))
{
    @Html.TextBox("name")
    <input type="submit" value="Filter" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.ActionLink("Localidades", "Search", "Location", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>
