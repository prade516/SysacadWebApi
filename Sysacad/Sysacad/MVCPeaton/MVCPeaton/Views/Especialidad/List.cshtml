@model IEnumerable<MVCPeaton.Models.ViewModels.EspecialidadVM>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MyLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeleteLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idespecialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.desc_especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MyLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeleteLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idespecialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desc_especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
