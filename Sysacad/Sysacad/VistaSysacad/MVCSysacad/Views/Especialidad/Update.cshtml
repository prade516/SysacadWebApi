@model MVCSysacad.Models.ViewModel.EspecialidadVM


@using (Html.BeginForm("Update", "Especialidad", FormMethod.Post, new { id = "frmpageadd", name = "frmpageadd", enctype = "multipart/form-data", @class = "formadd" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-center label-primary" style="border-radius:10px;height:35px;font-size:28px">
            Actualizar Especialidad
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.estado)
        @Html.HiddenFor(model => model.id_especialidad)
      
        <div class="form-group col-md-offset-4">
            @Html.LabelFor(model => model.desc_especialidad, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-offset-4">
                @Html.EditorFor(model => model.desc_especialidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.desc_especialidad, "", new { @class = "text-danger" })
            </div>
        </div>      

        <div class="form-group">
            <div class="col-md-offset-8 col-md-10">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="btn btn-warning">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
