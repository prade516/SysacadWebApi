@model MVCSysacad.Models.ViewModel.ModuloVM


@using (Html.BeginForm("Add", "Modulo", FormMethod.Post, new { id = "frmpageadd", name = "frmpageadd", enctype = "multipart/form-data", @class = "formadd" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontalcol-md-12">
        <h4 class="text-center label-primary" style="border-radius:10px;height:35px;font-size:28px">
            Agregar Modulo
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })       

        <div class="form-group col-md-offset-1">
            @Html.LabelFor(model => model.desc_modulo, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-md-offset-4">
                @Html.EditorFor(model => model.desc_modulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.desc_modulo, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<br /><br />*@

        <div class="form-group col-md-offset-1">
            @Html.LabelFor(model => model.ejecuta, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-md-offset-4">
                @Html.EditorFor(model => model.ejecuta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ejecuta, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<br />*@
        <div class="form-group">
            <div class="col-md-offset-8 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="btn btn-warning">
    @Html.ActionLink("Volver a la Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
